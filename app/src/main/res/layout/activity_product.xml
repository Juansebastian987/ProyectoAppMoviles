<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/comida1v1_pro"
                android:layout_width="143dp"
                android:layout_height="35dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="54dp"
                android:background="@drawable/btn_one"
                android:text="Pedir Producto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text3"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/comida2v1_pro"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="55dp"
                android:background="@drawable/btn_one"
                android:text="Pedir Producto"
                app:layout_constraintBottom_toTopOf="@+id/image2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text" />

            <Button
                android:id="@+id/comida1v2_pro"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="56dp"
                android:background="@drawable/btn_one"
                android:text="Pedir Producto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/comida1v1_pro"
                app:layout_constraintTop_toBottomOf="@+id/text4"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/comida2v2_pro"
                android:layout_width="152dp"
                android:layout_height="30dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/btn_one"
                android:text="Pedir Producto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toEndOf="@+id/comida2v1_pro"
                app:layout_constraintTop_toBottomOf="@+id/text2" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="149dp"
                android:layout_height="131dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="53dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintBottom_toTopOf="@+id/text4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toEndOf="@+id/image2"
                app:layout_constraintTop_toBottomOf="@+id/comida2v2_pro"
                app:srcCompat="@drawable/comida2" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="141dp"
                android:layout_height="128dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="52dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/comida2v1_pro"
                app:srcCompat="@drawable/comida2" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="143dp"
                android:layout_height="141dp"
                android:layout_marginTop="191dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintBottom_toTopOf="@+id/text2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/comida1" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="154dp"
                android:layout_height="141dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="97dp"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toTopOf="@+id/text"
                app:layout_constraintEnd_toStartOf="@+id/image3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text5"
                app:srcCompat="@drawable/comida1" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="86dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:text="Dog chow 2kg"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/comida2v1_pro"
                app:layout_constraintHorizontal_bias="0.205"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image4" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:layout_marginEnd="50dp"
                android:text="Dow chow 10kg"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/comida2v1_pro"
                app:layout_constraintTop_toBottomOf="@+id/image3" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="16dp"
                android:text="EQUILIBRIO 2kg"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image2" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="48dp"
                android:text="EQUILIBRIO 10kg"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:layout_marginTop="44dp"
                android:text="Productos"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>